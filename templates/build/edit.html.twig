{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-5">
                <h2 class="mb-4 text-center">Edit Your Build</h2>

                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(form.cpu, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.gpu, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.motherboard, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.ram, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.memory, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.powersupply, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.case, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <hr class="my-4">

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Enter a short description...'}}) }}
                </div>

                <div class="form-check mb-4">
                    {{ form_widget(form.isPublic, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.isPublic, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">ðŸ’¾ Save Build</button>
                    <a href="{{ path('app_account') }}" class="btn btn-secondary ms-2">Cancel</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
