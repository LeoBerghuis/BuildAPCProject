{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">BuildAPC</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
            {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link active" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/register">Register</a>
                </li>
            {% else %}
                <li>
                    <a class="nav-link active" href="/logout">log out</a>
                </li>
            {% endif %}
                <li class="nav-item">
                    <a class="nav-link active" href="#">Guides</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="bg-secondary  py-2">
    <div class="products d-flex">
<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="productsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        Products
    </button>
    <div class="dropdown-menu p-3" aria-labelledby="productsDropdown" style="width: 30rem;">
        {% for category in categories %}
            <a href="{{ path('app_product', {'id': category.id}) }}" class="card mb-2 text-decoration-none text-dark">
                <div class="card-body p-2">
                    <h6 class="card-title mb-0">{{ category.name }}</h6>
                </div>
            </a>
        {% endfor %}
    </div>
</div>


        <a href="#" class="btn btn-outline-secondary">Builder</a>
        <a href="#" class="btn btn-outline-secondary">Completed Builds</a>
    </div>
</div>
{% endblock %}
