{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">üõ†Ô∏è Choose your pc component!</h1>
        <div class="cards" style="display: flex; flex-direction: row; gap: 15px; flex-wrap: wrap">


            {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <div class="card-img-top" style="background-color: black">
                        <img src="{{ asset('images/cpu/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">

                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">${{ product.price }}</p>
                        <a href="{{ path('add_to_cart', { id: product.id }) }}" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}