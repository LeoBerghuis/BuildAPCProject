{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">üõ†Ô∏è Choose your pc component!</h1>
        <div class="cards" style="display: flex; flex-direction: row; gap: 15px; flex-wrap: wrap">


            {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <div class="card-img-top" style="background-color: black">
                        <img src="../../images/{{ product.category.name }}/{{ product.image }}" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">${{ product.price }}</p>
                        <a href="#" class="btn btn-dark">Go somewhere</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}